{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3030",
    "dev:turbo": "next dev --turbopack --port 3030",
    "build": "next build",
    "start": "next start --port 3030",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:with-emulators": "node scripts/test-with-emulators.js",
    "test:integration": "node scripts/test-with-emulators.js app/__tests__/integration/**/*.test.{ts,tsx}",
    "test:auth": "node scripts/test-with-emulators.js app/__tests__/**/auth*.test.{ts,tsx}",
    "emulators": "firebase emulators:start --project=triviape-cbc23 --only auth,firestore,storage",
    "emulators:all": "firebase emulators:start --project=triviape-cbc23",
    "emulators:export": "firebase emulators:export ./firebase-data",
    "emulators:import": "firebase emulators:start --project=triviape-cbc23 --import=./firebase-data --only auth,firestore,storage",
    "emulators:persistent": "firebase emulators:start --project=triviape-cbc23 --import=./.emulator-data --export-on-exit=./.emulator-data --only auth,firestore,storage",
    "dev:with-emulators": "concurrently \"npm run emulators\" \"npm run dev\"",
    "dev:with-persistent-emulators": "concurrently \"npm run emulators:persistent\" \"npm run dev\"",
    "dev:complete": "node scripts/dev-with-emulators.js",
    "test:firebase-admin": "node scripts/test-firebase-admin.js",
    "kill-ports": "node scripts/manage-emulators.js kill-ports",
    "check-ports": "node scripts/manage-emulators.js check-ports",
    "safe-start": "node scripts/manage-emulators.js check-ports && npm run dev:with-emulators",
    "safe-start:persistent": "node scripts/manage-emulators.js check-ports && npm run dev:with-persistent-emulators",
    "safe-start:complete": "node scripts/manage-emulators.js check-ports && npm run dev:complete",
    "firebase:use-emulator": "node scripts/toggle-firebase-env.js emulator",
    "firebase:use-production": "node scripts/toggle-firebase-env.js production",
    "dev:production": "npm run firebase:use-production && npm run dev",
    "firebase:setup": "node scripts/setup-firebase.js",
    "firebase:verify": "node scripts/db/verify-collections.js",
    "firebase:import-data": "node scripts/db/add-quiz.js",
    "firebase:import-additional-data": "node scripts/db/add-additional-quizzes.js",
    "firebase:start-emulators": "node scripts/start-emulators.js",
    "firebase:deploy": "firebase deploy",
    "firebase:check-emulators": "node scripts/check-emulators.js",
    "setup:all": "node scripts/setup-all.js",
    "firebase:add-users": "node scripts/db/add-sample-users.js",
    "firebase:check-auth": "node scripts/check-auth-emulator.js",
    "firebase:create-sample-users": "node scripts/create-sample-users.js"
  },
  "dependencies": {
    "@firebasegen/default-connector": "file:dataconnect-generated/js/default-connector",
    "@radix-ui/react-icons": "^1.3.2",
    "@rive-app/react-canvas": "^4.18.3",
    "@tanstack/react-query": "^5.67.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "firebase": "^11.4.0",
    "lucide-react": "^0.477.0",
    "next": "15.2.1",
    "react": "^18.2.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.2.0",
    "static": "^2.0.0",
    "tailwind-merge": "^3.0.2",
    "uuid": "^9.0.1",
    "web-vitals": "^3.5.2",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "firebase-admin": "^13.2.0",
    "firebase-tools": "^13.32.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "kill-port": "^2.0.1",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
